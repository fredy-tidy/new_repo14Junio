<div class="page_login"> 


<% if (title) { %>
    <h1><%- title %></h1>
    <% } else {
      res.redirect('/')
    } %>


    <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    
    <div class="div_login">
      
    <form class="login_form" id="loginForm" action="/account/login" method="post">
        <label for="email_input">Email:</label>
        <br>
        <input type="email" id="email_input" name="account_email" required/>
        <br>
        <label for="accountPassword">Password:</label> 
        <br>
        <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" placeholder="12 characters">
       
        <br>
        <span class="pass_indication">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, 1 lower case and 1 special character</span> 
        <br>
        <div class= "submit_form" >
        <input type="submit" value="Login" />
      </div>
    </form>
        <p>No account? <a href="/account/register" class="active"> Sign-up</a></p>
        
      </div>
      <br>
</div>


